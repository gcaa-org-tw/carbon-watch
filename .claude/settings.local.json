{
  "permissions": {
    "allow": [
      "mcp__playwright",
      "Bash(npm run build:*)",
      "Bash(npm run lint:*)"
    ],
    "deny": []
  },
  "PostToolUse": [
    {
      "matcher": "Write|Edit|MultiEdit",
      "hooks": [
        {
          "type": "command",
          "command": "npx tsx hooks/tsc.ts"
        }
      ]
    }
  ]
}
